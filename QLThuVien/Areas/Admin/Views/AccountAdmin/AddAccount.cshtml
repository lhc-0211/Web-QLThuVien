@model QLThuVien.Models.ThongTinTaiKhoanViewModels.ThongTinTaiKhoanViewModel

@{
    ViewData["Title"] = "AddAccount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-4">cấp tài khoản mới cho nhân viên</h2>
                @using (Html.BeginForm("AddAccount", "AccountAdmin", FormMethod.Post))
                {
                    <div class="form-outline mb-1">
                        <label class="form-label" for="form3Example1cg">Họ Tên</label>
                        @Html.TextBoxFor(x=>x.NhanVien.TenNhanVien,new{
                    type="text",
                    id="form3Example1cg",
                    @class="form-control form-control-lg"})
                    </div>

                    <div class="form-outline mb-1">
                        <label class="form-label" for="form3Example1cg">Tên tài khoản</label>
                        @Html.TextBoxFor(x=>x.User.Username,new{
                    type="text",
                    id="form3Example1cg",
                    @class="form-control form-control-lg"})
                    </div>

                    <div class="form-outline mb-1">
                        <label class="form-label" for="form3Example3cg">Địa chỉ Email</label>
                        @Html.TextBoxFor(x=>x.User.EmailDk,new{
                    type="email",
                    id="form3Example3cg",
                    @class="form-control form-control-lg"})
                    </div>

                    <div class="form-outline mb-1">
                        <label class="form-label" for="form3Example4cg">Mật khẩu</label>
                        @Html.TextBoxFor(x=>x.User.Password,new{
                    type="password",
                    id="form3Example4cg",
                    @class="form-control form-control-lg"})
                    </div>

                    <div class="d-flex justify-content-center mb-2 mt-2">
                        <button type="submit"
                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                            Add
                        </button>
                    </div>
                }
            </div>
        </div>

    </div>

</div>