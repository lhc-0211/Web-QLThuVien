@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QLThuVien.Models.Sach
@{
    ViewData["Title"] = "SuaThongTinSach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <a asp-action="DanhMucSach"><i class="bi bi-arrow-left"></i> Quay Lại</a>
</div>
<h1>Sửa Thông Tin Sách</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaSanPham">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSach" />
            <div class="form-group">
                <label asp-for="TenSach" class="control-label">Tên Sách</label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacGia" class="control-label">Tác Giả</label>
                <input asp-for="TacGia" class="form-control" />
                <span asp-validation-for="TacGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamXb" class="control-label">Năm Xuất Bản</label>
                <input asp-for="NamXb" class="form-control" />
                <span asp-validation-for="NamXb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNxb" class="control-label">Nhà Xuất Bản</label>
                <select asp-for="MaNxb" class="form-control" asp-items="ViewBag.MaNxb"></select>
                <span asp-validation-for="MaNxb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTheLoai" class="control-label">Thể Loại</label>
                <select asp-for="MaTheLoai" class="form-control" asp-items="ViewBag.MaTheLoai"></select>
                <span asp-validation-for="MaTheLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNgonNgu" class="control-label">Ngôn Ngữ</label>
                <select asp-for="MaNgonNgu" class="form-control" asp-items="ViewBag.MaNgonNgu"></select>
                <span asp-validation-for="MaNgonNgu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
