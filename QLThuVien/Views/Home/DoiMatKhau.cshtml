
@{
    ViewData["Title"] = "DoiMatKhau";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}

@using QLThuVien.Models.DoiMatKhauViewModels
@model DoiMatKhauViewModel
<div class="col-md-6 offset-md-3">
    <span class="anchor" id="formChangePassword"></span>
    <!-- form card change password -->
    <div class="card card-outline-secondary mt-5">
        <div class="card-header">
            <h3 class="mb-0">Đổi mật khẩu</h3>
        </div>
        @using (Html.BeginForm("DoiMatKhau", "Home", FormMethod.Post))
        {
            <div class="card-body">
                <form class="form" role="form" autocomplete="off">
                    <div class="form-group">
                        <label for="inputPasswordOld">Mật khẩu hiện tại</label>
                        @*<input type="password" class="form-control" id="inputPasswordOld" required="">*@
                        @Html.TextBoxFor(x=>x.MatKhauCu,new{
                    @class="form-control",
                    id="inputPasswordOld",
                    required="",
                    type="password"
                    })
                    </div>
                    <div class="form-group">
                        <label for="inputPasswordNew">Mật khẩu mới</label>
                        @*<input type="password" class="form-control" id="inputPasswordNew" required="">*@
                        @Html.TextBoxFor(x=>x.MatKhauMoi,new{
                    @class="form-control",
                    id="inputPasswordNew",
                    required="",
                    type="password"
                    })
                    </div>
                    <div class="form-group">
                        <label for="inputPasswordNewVerify">Nhập lại mật khẩu mới</label>
                        @*<input type="password" class="form-control" id="inputPasswordNewVerify" required="">*@
                        @Html.TextBoxFor(x=>x.XacNhanMatKhauMoi,new{
                    @class="form-control",
                    id="inputPasswordNewVerify",
                    required="",
                    type="password"
                    })
                    </div>
                    <div id="error" class="mb-1 war">
                        @TempData["ErrorPass"]
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg float-right">Đổi</button>
                    </div>
                </form>
            </div>
        }
    </div>
    <!-- /form card change password -->
</div>